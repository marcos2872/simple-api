# Development stage
FROM node:20-alpine

WORKDIR /app

# Install development tools
RUN npm install -g pnpm

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy source
COPY . .

# Expose API port
EXPOSE 3000

# Start in development mode
CMD ["pnpm", "start:dev"]